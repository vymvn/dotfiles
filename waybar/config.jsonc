    "position": "top",
    "height": 5,
    // "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "modules-left": ["clock","custom/weather","hyprland/workspaces", "custom/media", "idle_inhibitor"],
    "modules-center": [],
    "modules-right": ["network", "battery","cpu" ,"memory","pulseaudio", "pulseaudio#microphone", "backlight", "bluetooth", "tray"],
    "hyprland/window": {
        "format": "{}"
